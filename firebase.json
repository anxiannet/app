{
  "hosting": {
    "public": "public", // Serve static assets from the public folder
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsServer" // Name of the Firebase Function that serves your Next.js app
      }
    ]
  },
  "functions": {
    "source": "functions", // Directory containing your Firebase Functions
    "frameworksBackend": {
      "region": "us-central1" // Region for your Cloud Functions
    },
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}